{
  "claudeCliPath": "claude",
  "maxReviewRounds": 5,
  "reviewModel": null,
  "autoRunTests": true,
  "reviewStoragePath": ".reviews",
  "reviewTimeout": 120000,
  "ignoredFiles": [
    "*.generated.ts",
    "*.test.ts",
    "*.spec.ts",
    "dist/**",
    "node_modules/**"
  ],
  "severityThresholds": {
    "blockOn": ["critical", "major"],
    "warnOn": ["minor"]
  },
  "logging": {
    "level": "INFO",
    "toFile": false,
    "toConsole": true,
    "filePath": "./logs/custom-reviewer.log"
  },
  "persistReviewPrompts": false
}