{
  "claudeCliPath": "claude",
  "maxReviewRounds": 5,
  "reviewModel": null,
  "reviewStoragePath": ".reviews",
  "reviewTimeout": 120000,
  "severityThresholds": {
    "blockOn": ["critical", "major"],
    "warnOn": ["minor"]
  },
  "logging": {
    "level": "INFO",
    "toFile": false,
    "toConsole": true,
    "filePath": "./logs/custom-reviewer.log"
  },
  "persistReviewPrompts": false,
  "reviewer": {
    "type": "claude",
    "cliPath": "claude",
    "model": null,
    "timeout": 120000,
    "enableResume": true
  }
}